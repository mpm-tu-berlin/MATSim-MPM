<?xml version="1.0" ?>
<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v2.dtd">
<config>

    <module name="global">
        <param name="randomSeed" value="4711"/>
        <param name="coordinateSystem" value="Atlantis"/>
    </module>

    <module name="network">
        <param name="inputNetworkFile" value="../german_etruck_network.xml.gz"/>
    </module>

    <module name="plans">
        <param name="inputPlansFile" value="eTrucks_plans.xml.gz"/>
    </module>

    <module name="controler">
        <param name="outputDirectory" value="./output/ETruckTraffic/20.0pctETrucks/noElec"/>
        <param name="firstIteration" value="0"/>
        <param name="lastIteration" value="0"/>
        <param name="eventsFileFormat" value="xml"/>
        <param name="mobsim" value="qsim"/>
    </module>

    <module name="qsim">
        <!-- "start/endTime" of MobSim (00:00:00 == take earliest activity time/ run as long as active vehicles exist) -->
        <param name="startTime" value="00:00:00"/>
        <param name="endTime" value="96:00:00"/>
        <param name="simStarttimeInterpretation" value="onlyUseStarttime"/>
    </module>

    <module name="planCalcScore">
        <param name="learningRate" value="1.0"/>
        <param name="BrainExpBeta" value="2.0"/>

        <param name="lateArrival" value="-18"/>
        <param name="earlyDeparture" value="-0"/>
        <param name="performing" value="+6"/>
        <param name="traveling" value="-6"/>
        <param name="waiting" value="-0"/>

        <parameterset type="activityParams">
            <param name="activityType" value="loaded"/>
			            <param name="typicalDuration" value="04:00:00"/>
            <param name="typicalDurationScoreComputation" value="relative"/>
            <param name="scoringThisActivityAtAll" value="true"/>

        </parameterset>
		
        <parameterset type="activityParams">
            <param name="activityType" value="unloaded"/>
            <param name="typicalDuration" value="04:00:00"/>
            <param name="typicalDurationScoreComputation" value="relative"/>
            <param name="scoringThisActivityAtAll" value="true"/>

        </parameterset>

    </module>

    <module name="strategy">
        <param name="maxAgentPlanMemorySize" value="5"/> <!-- 0 means unlimited -->

        <param name="ModuleProbability_1" value="0.7"/>
        <param name="Module_1" value="BestScore"/>

    </module>


</config>
